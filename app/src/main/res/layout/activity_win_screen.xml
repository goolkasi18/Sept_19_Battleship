<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.battleship.WinScreen"
    android:id="@+id/replayButton">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlayerWin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff1d1d"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:background="@mipmap/winship"
        android:layout_alignTop="@+id/PlayerWin"
        android:layout_toLeftOf="@+id/PlayerWin"
        android:layout_toStartOf="@+id/PlayerWin" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:background="@mipmap/winship"
        android:layout_toEndOf="@+id/PlayerWin"
        android:layout_above="@+id/PlayerWin"
        android:layout_toRightOf="@+id/PlayerWin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/mainMenuButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="backToMainMenu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Replay"
        android:id="@+id/replayButton"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mainMenuButton"
        android:layout_toEndOf="@+id/mainMenuButton"
        android:onClick="restart"/>
</RelativeLayout>
